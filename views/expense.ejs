<%- include('../views/partials/header.ejs') %>


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-center flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 mt-5">

      <div class="btn-toolbar mb-2 mb-md-0">

<!-- Main -->
                                                                
<main class="d-flex flex-col justify-center items-center mx-auto">
    <form action="/" id="expensesForm" class="mx-auto">
    
        <!-- Item input -->
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control" id="itemInput" name="itemInput" placeholder="Expense Item" required />
              <label
                for="itemInput">Expense Item
              </label>
            </div>
             <!-- Select Date -->
<div class="form-floating mb-3">
    <input type="date" class="form-control" id="date" name="date" placeholder="date" required>
    <label for="date">Date</label>
</div>
   <!-- Catergories -->
   <div class="form-floating mb-3">
    <select
      class="form-select"
      id="inputGroupSelect01" name="category" required>
      <option value="Food">Food</option>
      <option value="Transport">Transport</option>
      <option value="Activity">Activity</option>
      <option value="Accommodation">Accommodation</option>
      <option value="Shopping">Shopping</option>
    </select>
    <label for="inputGroupSelect01">
        Catergory </label>
    </div>
  <!-- Description -->
  <div class="form-floating mb-3">
    <textarea
      class="form-control"
      id="exampleFormControlTextarea1"
      placeholder="Description" name="notes" style="height: 100px" required></textarea>
    <label
      for="exampleFormControlTextarea1">Notes</label>
</div>
 <!-- Amount -->
    <div class="d-flex flex-row mb-3 justify-between">
        <div class="form-floating">
      <input type="number" min='0' class="form-control" aria-label="Amount" id="amount" name="amount" placeholder="Amount" required/>
      <label for="amount">Amount</label>
      </div>
      <div class="form-floating">
      <select class="form-select" id="currency" name="currency" aria-label="Dropdown" required>
        <% for (var i = 0; i < currencies.length; i++) { %>
            <option value="<%= currencies[i].value %>"><%= currencies[i].name %></option>
            <% } %>
      </select>
      <label for="currency">Currency</label>
      </div>

  </div>
  <!-- Payer -->
  <div class="d-flex flex-row justify-between">
    <!-- Item input -->
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control" id="payer" name="payer" placeholder="payer" required />
      <label
        for="payer">Payer
      </label>
    </div>

    <div class="form-floating">
    <select class="form-select" id="pay-method" required>
      <option value="Cash">Cash</option>
      <option value="Credit Card">Credit Card</option>
    </select>
    <label for="pay-method" class="text-lg">Pay by?</label>
    </div>
  </div>

<button type="submit" class="mt-3 btn btn-primary col-6 offset-3" id="submitBtn">Submit</button>
    </form>

  
 <!-- Display Result -->
<div class="items-center">
 <h2 class="items-center mx-auto text-center mt-10 pb-3">Expenses</h2>
 <div class="d-flex flex-row justify-center mb-3">
   <p class="text-lg">Total:</p>
   <span id="total" class="text-lg ml-3 mr-2">0</span>
   <span class=""><select id="currencySelect" name="currency" aria-label="Dropdown">
    <% for (var i = 0; i < currencies.length; i++) { %>
        <option value="<%= currencies[i].value %>"><%= currencies[i].name %></option>
        <% } %>
</select></span>
</div>

 <div id="expenseContainer" class="justify-center items-center mx-auto"> 
   
</div>
</div>

</main>

    </div>
    </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>

<script src="/js/expense.js"></script>

</body>
</html>