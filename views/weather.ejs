<%- include('../views/partials/header.ejs') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-center flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 mt-5">

      <div class="btn-toolbar mb-2 mb-md-0">

        <!------------------------------------Main Section ------------------------------------------------------------>
<main class="pl-10">
    <form method='post' class="flex flex-col justify-center items-center">
    <div class="form-floating w-full pb-10 max-w-xs">

      <div class="flex flex-row form-floating">
      <input type="text" placeholder="Type the city name!" name="location" class="form-control  w-full max-w-xs bg-transparent" id="searchWeather"/>
      <label for="searchWeather">Type the city name!</label>
      <button type="submit" id="search" class="">
        <span class="material-icons-sharp">search</span>
      </button> 
    </div>
    </div>
  </form>
  
      
    <!-------------Display Weather------------------------------------------------------------------>
    <div class="">
      <div class="w-full rounded items-center text-center bg-success-subtle grid grid-cols-1 ">
        <div class="col-span-1 row-span-2 gap-10">
          <h1 class="leading-10 text-lg p-5 pb-5">The current temperature in <%= defaultLocation %> is <%= temperature %>°C</h1>
          <p class="text-center">There are <%= description %></p>
        </div>
        <div class="col-span-1 row-span-2">
          <img src="http://openweathermap.org/img/wn/<%= imgicon %>@2x.png" class="mx-auto max-w-full w-[100px] h-[100px]">
        </div>
      </div>
    </div>
    
     <div class="mt-10">
        <h2 class="pb-5 text-2xl">5-Day Forecast</h2>
        <div class="w-[100%] rounded bg-success-subtle text-center grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-x-10">
          <% forecastItems.forEach(function(item) { %>
            <div class="gap-10 leading-8 p-5 ">
              <p class="pb-3 text-xl font-bold text-[color:var(--color-primary)]"><%= item.day %></p> <!-- Date and time -->
              <p class="text-lg text-center pb-5 font-bold"><%= item.temperature %>°C</p> <!-- Temperature -->
              <p class="text-lg">There will be <%= item.description %></p> <!-- Weather description -->
              <img src="http://openweathermap.org/img/wn/<%= item.icon %>@2x.png" class="w-[60px] lg:w-[100px] mx-auto pb-10"> <!-- Weather icon -->
            </div>
          <% }) %>
        </div>
    </div> 
    
  </main>

  </div>
  </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>

</body>
</html>
